<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in" %>
    <% end %>

    <p><%= link_to "Sign up", signup_path %></p>
</div>